<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/menuitem_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp">

    <ImageView
        android:id="@+id/menuitem_iv"
        android:layout_width="@dimen/dimen_53"
        android:layout_height="@dimen/dimen_53"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/home_yewu_hde"></ImageView>

    <TextView
        android:id="@+id/menuitem_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menuitem_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="监控"
        android:textColor="#000000"
        android:textSize="@dimen/font_13"></TextView>

</RelativeLayout>