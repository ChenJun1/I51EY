<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_50"
    android:background="@color/color_ffffff"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/TemperatureCount_iv"
            android:layout_gravity="center|right"
            android:src="@drawable/thermometer_gray"
            android:paddingLeft="@dimen/dimen_75"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/childChildTV"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:textColor="@color/text_black"
            android:layout_marginLeft="@dimen/dimen_5"
            android:layout_height="@dimen/dimen_50"
            android:text="zhangsan "
            android:gravity="center_vertical"
             />
        <LinearLayout
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        <TextView
            android:gravity="center_vertical"
            android:text="("
            android:layout_marginRight="@dimen/dimen_3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/IsOnline_Status_tv"
            android:layout_width="wrap_content"
            android:textColor="@color/text_black"
            android:layout_height="@dimen/dimen_50"
            android:text="zhangsan "
            android:gravity="center_vertical"
            />
        <TextView
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_3"
            android:text=")"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
